<Window x:Class="SectionSteelCalculationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SectionSteelCalculationTool"
        xmlns:controls="clr-namespace:SectionSteelCalculationTool.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Width="370" Height="250" SizeToContent="Height" MaxHeight="370"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="/Resources/Logo.ico" 
        Topmost="{Binding ElementName=cBoxTopMost, Path=IsChecked}"
        d:Width="370" d:Height="370">
    <TabControl>
        <TabItem Header="Unit Area/Weight">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <GroupBox Header="Generation Type" Margin="3">
                        <StackPanel>
                            <RadioButton x:Name="rBtnArea" Content="Unit _Area" Margin="3" IsChecked="True"></RadioButton>
                            <CheckBox x:Name="cBoxExcludeTopSurface" Content="Exclude _Top Surface" Margin="3" 
                                      IsEnabled="{Binding ElementName=areaRBtn, Path=IsChecked}"></CheckBox>
                            <RadioButton x:Name="rBtnWeight" Content="Unit _Weight" Margin="3"></RadioButton>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Accuracy" Margin="3">
                        <StackPanel>
                            <RadioButton x:Name="rBtnRoughly" Content="R_oughly" Margin="3"></RadioButton>
                            <RadioButton x:Name="rBtnPrecisely" Content="_Precisely" Margin="3"></RadioButton>
                            <RadioButton x:Name="rBtnGBData" Content="GB _Data" Margin="3" IsChecked="True"></RadioButton>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <GroupBox Header="π Style" Margin="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="rBtnPIFunc" Grid.Column="0" Content="P_I()" Margin="3" IsChecked="True"></RadioButton>
                            <RadioButton x:Name="rBtnPINum" Grid.Column ="1" Content="_3.14" Margin="3"></RadioButton>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Targe Offsets" Margin="3">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Content="_Rows" Grid.Column="0" Margin="3" Target="{Binding ElementName=awNUDRow}"></Label>
                                <controls:NumericUpDown x:Name="awRowOffset" Grid.Column="1" Margin="6"
                                                        Minimum="-100" Maximum="100"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Content="_Columns" Grid.Column="0" Margin="3" Target="{Binding ElementName=awNUDCol}"></Label>
                                <controls:NumericUpDown x:Name="awColOffset" Grid.Column="1" Margin="6" 
                                                        Minimum="-100" Maximum="100" Value="1">

                                </controls:NumericUpDown>
                            </Grid>
                            <CheckBox x:Name="cBoxAWOverwrite" Content="Overwrite _existing data" Margin="3"></CheckBox>
                        </StackPanel>
                    </GroupBox>
                    <Button x:Name="awGenerate" Content="_Generate" Width="100" Height="30" Margin="3,10,3,10"
                            Click="AreaWeightGenerate"></Button>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Stiffener">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <CheckBox x:Name="cBoxTrunc" Grid.Row="0" Content="_Truncate the parameters" Margin="5" IsChecked="True"></CheckBox>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="Target Offsets">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="_Rows" Margin="3" Target="{Binding ElementName=stifNUDRow}"></Label>
                                <controls:NumericUpDown x:Name="stifRowOffset" Grid.Column="1" Margin="6" Width="70" 
                                                        Minimum="-100" Maximum="100" Value="1">

                                </controls:NumericUpDown>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="_Columns" Margin="3" Target="{Binding ElementName=stifNUDCol}"></Label>
                                <controls:NumericUpDown x:Name="stifColOffset" Grid.Column="1" Margin="6" Width="70"
                                                        Minimum="-100" Maximum="100">

                                </controls:NumericUpDown>
                            </Grid>
                            <CheckBox x:Name="cBoxStifOverwrite" Content="Overwrite _existing data" Margin="3"></CheckBox>
                        </StackPanel>
                    </GroupBox>
                    <Button x:Name="stifGenerate" Grid.Column="1" Content="_Generate" Width="100" Height="30"
                            Click="StifGenerate"></Button>
                </Grid>
            </Grid>
        </TabItem>
        <TabItem Header="Goto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="36"></RowDefinition>
                </Grid.RowDefinitions>
                <ScrollViewer x:Name="scrolGoto" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="categoryInfoPanel" Orientation="Vertical">

                    </StackPanel>
                </ScrollViewer>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="_Clear" Width="100" Height="30" Margin="3" 
                            HorizontalAlignment="Right" Click="ClearCategoryFilter"></Button>
                    <Button Grid.Column="1" Content="_Goto" Width="100" Height="30" Margin="3" Click="GotoSpecified"></Button>
                </Grid>
            </Grid>
        </TabItem>
        <TabItem Header="Option">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <CheckBox x:Name="cBoxTopMost" Grid.Row="0" Content="_Always on top" Margin="3" IsChecked="True"></CheckBox>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
